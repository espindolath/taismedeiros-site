<div class="login">
	<div id="box-login">
		<h2>Entrar</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email,
		                required: false,
		                autofocus: true,
		                input_html: { autocomplete: "email" }, label:'E-mail'   %>
		    <%= f.input :password,
		                required: false,
		                input_html: { autocomplete: "current-password" }, label:'Senha' %>

		    <%= f.input :remember_me, as: :boolean, inline_label: 'Lembrar senha', label: false %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Ir" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>	
</div>